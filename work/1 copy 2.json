{
    "strength": {
        "fields": [
            {
                "key": "training_maxs",
                "label": "Training Max / 1RM per lift",
                "type": "object",
                "required": true,
                "widget": "group",
                "note": "Provide 1RM for main lifts",
                "properties": {
                    "squat_1rm": {
                        "type": "number",
                        "label": "Squat 1RM (kg)",
                        "required": false,
                        "placeholder": "e.g. 140",
                        "validation": {
                            "min": 0
                        }
                    },
                    "bench_1rm": {
                        "type": "number",
                        "label": "Bench 1RM (kg)",
                        "required": false,
                        "validation": {
                            "min": 0
                        }
                    },
                    "deadlift_1rm": {
                        "type": "number",
                        "label": "Deadlift 1RM (kg)",
                        "required": false,
                        "validation": {
                            "min": 0
                        }
                    },
                    "ohp_1rm": {
                        "type": "number",
                        "label": "Overhead press 1RM (kg)",
                        "required": false,
                        "validation": {
                            "min": 0
                        }
                    }
                }
            },
            {
                "key": "progression_scheme",
                "label": "Progression Scheme",
                "type": "select",
                "widget": "select",
                "required": true,
                "options": [
                    "Linear",
                    "5x5",
                    "3x5",
                    "5/3/1",
                    "Undulating",
                    "Block Periodization"
                ],
                "placeholder": "Choose scheme"
            },
            {
                "key": "intensity_topset",
                "label": "Intensity (Top Set) %1RM",
                "type": "number",
                "widget": "slider",
                "required": true,
                "validation": {
                    "min": 1,
                    "max": 100
                },
                "placeholder": "e.g. 85",
                "note": "Intensity for top working set (as % of 1RM)"
            },
            {
                "key": "backoff_sets",
                "label": "Back-off Sets / Percentages",
                "type": "array",
                "widget": "list",
                "required": false,
                "itemSchema": {
                    "type": "object",
                    "properties": {
                        "sets": {
                            "type": "number",
                            "label": "Sets",
                            "required": true,
                            "validation": {
                                "min": 1
                            }
                        },
                        "reps": {
                            "type": "number",
                            "label": "Reps",
                            "required": true,
                            "validation": {
                                "min": 1
                            }
                        },
                        "percent": {
                            "type": "number",
                            "label": "Intensity %1RM",
                            "required": true,
                            "validation": {
                                "min": 1,
                                "max": 100
                            }
                        }
                    }
                },
                "note": "e.g. [{sets: 2, reps:5, percent:70}]"
            },
            {
                "key": "tempo",
                "label": "Tempo (optional)",
                "type": "text",
                "widget": "input",
                "required": false,
                "placeholder": "e.g. 3-1-1"
            },
            {
                "key": "rest_seconds",
                "label": "Rest (seconds)",
                "type": "number",
                "required": true,
                "validation": {
                    "min": 0
                },
                "placeholder": "e.g. 120"
            },
            {
                "key": "notes",
                "label": "Coach Notes / Cues",
                "type": "textarea",
                "required": false,
                "placeholder": "Technique cues, progression notes..."
            }
        ]
    },
