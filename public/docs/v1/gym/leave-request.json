{
    "openapi": "3.0.3",
    "info": {
        "title": "Trainer Leave Request API",
        "version": "1.0.0",
        "description": "API endpoints for managing trainer leave requests for gyms and trainers."
    },
    "paths": {
        "/v1/account/trainers/leave-requests": {
            "get": {
                "summary": "Get leave requests (paginated)",
                "tags": [
                    "Leave Requests"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        },
                        "description": "Page number for pagination."
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 10
                        },
                        "description": "Number of results per page."
                    },
                    {
                        "name": "tab",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "pending",
                                "approved",
                                "rejected"
                            ]
                        },
                        "description": "Filter leave requests by status."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Paginated list of leave requests",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "leave_id": {
                                                        "type": "integer"
                                                    },
                                                    "trainer_id": {
                                                        "type": "integer"
                                                    },
                                                    "gym_id": {
                                                        "type": "integer"
                                                    },
                                                    "start_date": {
                                                        "type": "string",
                                                        "format": "date"
                                                    },
                                                    "end_date": {
                                                        "type": "string",
                                                        "format": "date"
                                                    },
                                                    "leave_type": {
                                                        "type": "string"
                                                    },
                                                    "is_paid": {
                                                        "type": "boolean"
                                                    },
                                                    "reason": {
                                                        "type": "string"
                                                    },
                                                    "status": {
                                                        "type": "string"
                                                    },
                                                    "admin_comments": {
                                                        "type": "string"
                                                    },
                                                    "attachments": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "retroactive": {
                                                        "type": "boolean"
                                                    },
                                                    "trainer_name": {
                                                        "type": "string"
                                                    },
                                                    "trainer_email": {
                                                        "type": "string"
                                                    },
                                                    "trainer_avatar": {
                                                        "type": "string"
                                                    },
                                                    "gym_name": {
                                                        "type": "string"
                                                    },
                                                    "gym_avatar": {
                                                        "type": "string"
                                                    },
                                                    "gym_logo": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        },
                                        "total": {
                                            "type": "integer",
                                            "example": 42
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/v1/account/trainers/leave-requests/update/{leave_id}": {
            "post": {
                "summary": "Update a leave request (Gym owner only)",
                "tags": [
                    "Leave Requests"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "leave_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 10
                        },
                        "description": "The ID of the leave request to update."
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "status": {
                                        "type": "string",
                                        "enum": [
                                            "pending",
                                            "approved",
                                            "rejected"
                                        ],
                                        "example": "approved"
                                    },
                                    "admin_comments": {
                                        "type": "string",
                                        "example": "Approved after review."
                                    },
                                    "is_paid": {
                                        "type": "boolean",
                                        "example": true
                                    },
                                    "decision_reason": {
                                        "type": "string",
                                        "example": "Eligible for paid leave."
                                    }
                                },
                                "required": [
                                    "status"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Leave request updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Leave request updated successfully."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid or missing parameters"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}